#!/bin/sh

export JOB="$1"
export CLI="java -jar {{jenkins_home}}/jenkins-cli.jar {{jenkins_cli_extra_opts}} -s {{ jenkins_url }}"

[ -z "$JOB" ] && exit 1

[ -d "{{jenkins_home}}/jobs/$JOB" ] || $CLI create-job $JOB < {{jenkins_home}}/jobs/${JOB}.xml

$CLI update-job $JOB < {{jenkins_home}}/jobs/${JOB}.xml
